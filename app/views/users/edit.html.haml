- content_for :header, @user.handle
.row
  .small-12.columns
    =form_for @user do |f|
      .form-inputs
        %fieldset
          =f.email_field :email, placeholder: "Email"
        .row
          .small-12.medium-6.columns
            %fieldset
              =f.label :first_name
              =f.text_field :first_name, placeholder: "First Name"
          .small-12.medium-6.columns
            %fieldset
              =f.label :last_name
              =f.text_field :last_name, placeholder: "Last Name"
        -if @user.identities.empty?
          %fieldset
            =f.password_field :password, placeholder: "Current Password"
      .form-actions
        =f.submit "Update", class: "button hollow"
